<p id="notice"><%= notice %></p>

<h1>Bandas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Integrantes</th>
      <th>Fecha de debut</th>
      <th>Genero</th>
      <th>Recitales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.crew %></td>
        <td><%= band.date_debout %></td>
        <td><%= band.type %></td>
        <td><%= band.concert_count %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

